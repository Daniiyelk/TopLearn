@model IEnumerable<TopLearn.DataLayer.Entities.Order.Order>
@using TopLearn.Core.Convertors

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> فاکتور های من </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> فاکتور </h1></header>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>شماره فاکتور</th>
                                    <th>تاریخ</th>
                                    <th>جمع</th>
                                    <th>پرداخت</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                       <td>
                                           @item.OrderId
                                       </td>
                                       <td>@item.CreateDate.ToShamsi()</td>
                                       <td>@item.OrderSum.ToString("#,0")</td>
                                       <td>
                                           @if(item.IsFinally){
                                               <div class="text-success">
                                                   <p>پرداخت شده</p>
                                               </div>
                                           }
                                           else{
                                               <div class="text-danger">
                                                   <p>پرداخت نشده</p>
                                               </div>
                                           }
                                       </td>
                                       <td>
                                           <a class="btn btn-info" href="/userpanel/order/showorder/@item.OrderId">مشاهده</a>
                                       </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

