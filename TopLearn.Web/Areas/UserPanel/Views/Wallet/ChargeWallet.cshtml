@using TopLearn.Core.DTOs
@using TopLearn.Core.Convertors
@model TopLearn.Core.DTOs.ChargeWalletViewModel
@{
    ViewData["Title"] = "شارژ کیف پول";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">شارژ کیف پول</li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">

                        <header><h1>کیف پول </h1></header>
                        <hr />
                        <div class="inner form-layer">
                            <form asp-action="ChargeWallet" method="post">
                                <div class="row">

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="ChargeWallet"><i class="zmdi zmdi-balance-wallet"></i></span>
                                            <input type="number" class="form-control" asp-for="Amount" placeholder="مبلغ به تومان" aria-describedby="ChargeWallet">
                                        </div>
                                    </div>
                                    <div class="alert alert-warning" asp-validation-summary="All"></div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success">شارژ کیف پول</button>
                                    </div>
                                </div>
                            </form>
                            <hr />
                            @{
                                List<ChargeWalletHistoryViewModel> list = ViewBag.ListDataChargeWalletHistory as List<ChargeWalletHistoryViewModel>;
                            }
                            <table class="table table-bordered">
                                <tr>
                                    <th>مبلغ</th>
                                    <th>نوع تراکنش</th>
                                    <th>تاریخ</th>
                                    <th>شرح</th>
                                </tr>
                                @foreach(var item in list)
                                {
                                    <tr>
                                        <td>@item.Amount.ToString("#,0 تومان")</td>
                                        <td>@if (item.Type == 1)
                                            {
                                                <p class="text-success">واریز</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">برداشت</p>
                                            }
                                        </td>
                                        <td>@item.DateTime.ToShamsi()</td>
                                        <td>@item.Description</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

