@model TopLearn.Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">تغییر کلمه عبور</li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">

                        @if (ViewBag.IsSuccess != null)
                        {
                            <div class="alert alert-success">
                                کلمه عبور با موفقیت ویرایش شد
                            </div>
                        }

                        <header><h1> تغییر کلمه عبور </h1></header>
                        <hr />
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post">
                                <div class="row">

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="OldPassword"><i class="zmdi zmdi-key"></i></span>
                                            <input type="password" class="form-control" asp-for="OldPassword" placeholder="کلمه عبور فعلی" aria-describedby="OldPassword">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="Password"><i class="zmdi zmdi-key"></i></span>
                                            <input type="password" class="form-control" asp-for="Password" placeholder=" کلمه عبور جدید" aria-describedby="Password">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="RePassword"><i class="zmdi zmdi-key"></i></span>
                                            <input type="password" class="form-control" asp-for="RePassword" placeholder="تکرار کلمه عبور جدید" aria-describedby="RePassword">
                                        </div>
                                    </div>
                                    <div class="alert alert-warning" asp-validation-summary="All"></div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <hr />
                                        <button class="btn btn-success">ذخیره تغییرات</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

