@page "{id}"
@model TopLearn.Web.Pages.Admin.Discount.EditDiscountModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کد تخفیف</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="Discount.DiscountId"/>
        <div class="col-md-7">
            <h2>اطلاعات تخفیف</h2>
            <hr />
            <div class="form-group">
                <label>کد تخفیف</label>
                <input type="text" asp-for="Discount.DiscountCode" class="form-control">
            </div>
            <div class="form-group">
                <label>درصد کد تخفیف</label>
                <input type="number" asp-for="Discount.DiscountPercent" class="form-control">
            </div>
            <div class="form-group">
                <label>تعداد مجاز برای استفاده کد</label>
                <input type="number" asp-for="Discount.UsableCount" class="form-control">
            </div>
            <div class="form-group">
                <label>تاریخ شروع</label>
                <input type="text" asp-for="Discount.StartDate" class="form-control">
            </div>
            <div class="form-group">
                <label>تاریخ پایان</label>
                <input type="text" asp-for="Discount.EndDate" class="form-control">
            </div>
            <br />
            <input type="submit" value="ویرایش" class="btn btn-success" />
        </div>
        <div asp-validation-summary="All"></div>
    </form>
</div>