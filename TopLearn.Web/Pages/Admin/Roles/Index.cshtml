@page
@model TopLearn.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "دسترسی ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/admin/roles/CreateRole" class="btn btn-success">افزودن نقش جدید</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام نقش</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RolesList)
                                {
                                    <tr>
                                        <td>@item.RoleTitle</td>
                                        <td>
                                            <a href="/admin/Roles/editRole/@item.RoleId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/admin/Roles/DeleteRole/@item.RoleId" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>